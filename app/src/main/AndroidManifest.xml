        android:theme="@style/Theme.MCA_proJect_tablet"
        tools:targetApi="31"
        android:hardwareAccelerated="true"

        >

        <activity
            android:name=".Main"
            android:exported="true"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".HotelMain"  android:exported="true"  android:screenOrientation="landscape"/>
        <activity android:name=".HotelPage1" android:exported="true"  android:screenOrientation="landscape"/>
        <activity android:name=".HotelPage3" android:exported="true"  android:screenOrientation="landscape"/>
        <activity android:name=".HotelPage2" android:exported="true"  android:screenOrientation="landscape"/>
        <activity android:name=".ServingMain"  android:exported="true"  android:screenOrientation="landscape"/>
